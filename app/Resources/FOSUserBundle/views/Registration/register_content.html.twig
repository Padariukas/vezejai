{% trans_default_domain 'FOSUserBundle' %}

{# User registration #}

<div class="panel-heading text-center panel-background table-bordered">
    <strong> Registracija </strong>
<div class="panel-body">
    <form action="{{ path('fos_user_registration_register') }}"  method="POST"
          class="fos_user_registration_register">
        {{ form_errors(form) }}
        {{ form_widget(form.username, {'attr': {'class': 'form-control whitespace-bottom', 'placeholder': "Vartotojo vardas" }} ) }}
        {{ form_errors(form.username) }}
        <br>
        {{ form_widget(form.email, {'attr': {'class': 'form-control whitespace-bottom', 'placeholder': "E-paštas"}} )}}
        {{ form_errors(form.email) }}
        <br>
        {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control whitespace-bottom', 'placeholder': "Slaptažodis"}} ) }}
        {{ form_errors(form.plainPassword.first) }}
        <br>
        {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control whitespace-bottom', 'placeholder': "Pakartok slaptažodį"}} ) }}
        <br>
        {#{{ form_label(form.plainPassword.second) }}#}
        {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control whitespace-bottom', 'placeholder': form.plainPassword.vars.label}} ) }}
        <br>
        {{ form_widget(form.vardas, {'attr':{'class': 'form-control whitespace-bottom', 'placeholder': "Vardas" }}) }}
        <br>
        {{ form_widget(form.pavarde, {'attr':{'class': 'form-control whitespace-bottom', 'placeholder': "Pavardė" }}) }}
        <br>
        {{ form_widget(form.adresas, {'attr':{'class': 'form-control whitespace-bottom', 'placeholder': "Adresas" }}) }}
        <br>
        {{ form_widget(form.tel_nr, {'attr':{'class': 'form-control whitespace-bottom', 'placeholder': "Telefono numeris: 861111111" }}) }}
        {{ form_rest(form) }}
        <br>
        <div class="text-center">
            <input type="submit" value="{{ 'registration.submit'|trans }}" class="btn btn-default square-btn-adjust "/>
        </div>
    </form>
    </div>

</div>
